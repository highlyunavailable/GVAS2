<?xml version="1.0"?>
<Definitions xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <EntityComponents>

    <EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
        <TypeId>Inventory</TypeId>
        <SubtypeId>GVA-Behavior-HybridInterdictor</SubtypeId>
      </Id>
      <Description>
        [RivalAI Behavior]
        [BehaviorName:HorseFighter]
        [AutopilotData:GVA-Autopilot-FFO]

        [TargetData:Common-Target-Main-A]
        [OverrideTargetData:Common-Target-Main-A]
        
        [WeaponSystem:GVA-Weapons-FFO]

        [Triggers:GVA-Trigger-ScoutTattle]
        [Triggers:GVA-Trigger-StandardCompromised]
        [Triggers:GVA-Trigger-Despawn]
        [Triggers:GVA-Trigger-DespawnMES]
      </Description>
    </EntityComponent>
    <EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
        <TypeId>Inventory</TypeId>
        <SubtypeId>GVA-Weapons-FFO</SubtypeId>
      </Id>
      <Description>
        [RivalAI Weapons]
        
        [UseProjectileLeadPrediction:true]
        [UseBarrageFire:true]
        [UseTurrets:false]
        [UseStaticGuns:true]
      </Description>
    </EntityComponent>
    <EntityComponent xsi:type="MyObjectBuilder_InventoryComponentDefinition">
      <Id>
        <TypeId>Inventory</TypeId>
        <SubtypeId>GVA-Autopilot-FFO</SubtypeId>
      </Id>
      <Description>
        [RivalAI Autopilot]

        [SlowDownOnWaypointApproach:true]
        [ExtraSlowDownDistance:250]
        [FlyLevelWithGravity:true]

        [IdealMinSpeed:18]
        [IdealMaxSpeed:70]
        [MaxSpeedTolerance:5]

        [MinimumPlanetAltitude:500]
        [IdealPlanetAltitude:600]

        [WaypointTolerance:50]

        [WaypointWaitTimeTrigger:8]

        [AllowStrafing:true]
        [StrafeMaxDurationMs:3000]
        [StrafeSpeedCutOff:20]

        [OffsetSpaceMinDistFromTarget:300]
        [OffsetSpaceMaxDistFromTarget:600]
        [OffsetPlanetMinDistFromTarget:300]
        [OffsetPlanetMaxDistFromTarget:600]
        [OffsetPlanetMinTargetAltitude:500]
        [OffsetPlanetMaxTargetAltitude:600]

        [LimitRotationSpeed:true]
        [MaxRotationMagnitude:0.4]
      </Description>
    </EntityComponent>
  </EntityComponents>
</Definitions>